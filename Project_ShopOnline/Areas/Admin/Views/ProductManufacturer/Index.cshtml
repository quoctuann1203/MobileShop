@model IEnumerable<ShopOnlineConnection.NhaSanXuat>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    td {
        padding-left: 40px !important;
    }
</style>
<div class="table-1" style="margin: 40px 80px 0 80px">
        <h3 style="max-width:90%;margin-bottom: 20px;text-align:center; color:darkorange"> Trang quản lý Nhà Sản Xuất</h3>
        <table class="table" style="border: solid #808080 1px ; border-radius: 2px; max-width:90%">
            <thead class="thead-dark" style="background-color: bisque">
                <tr>
                    <th scope="col">Mã Nhà Sản Xuất</th>
                    <th scope="col">Tên Nhà Sản Xuất</th>
                    <th scope="col">Tình Trạng</th>
                    <th colspan="3" style="text-align: center"> Action 
                        <a href="@Url.Action("Create","ProductManufacturer")">
                            <i style="margin-left:40px" class="fas fa-plus-circle"></i>
                        </a> 
                    </th>
                    
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaNhaSanXuat</td>
                        <td>@item.TenNhaSanXuat</td>
                        <td>@item.TinhTrang</td>
                        <td>
                            <a href="@Url.Action("Edit","ProductManufacturer", new { id = item.MaNhaSanXuat})">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("Lock","ProductManufacturer", new { id = item.MaNhaSanXuat})">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>



