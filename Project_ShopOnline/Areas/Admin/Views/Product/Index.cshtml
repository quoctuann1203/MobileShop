 
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    td {
        padding-left: 40px !important;
    }
</style>
<div class="table-1" style="margin: 40px 80px 0 80px">
    <h3 style="max-width:100%;margin-bottom: 20px;text-align:center; color:olive"> Trang quản lý Sản Phẫm</h3>
    <table class="table" style="border: solid #808080 1px ; border-radius: 2px; max-width:100%">
        <thead class="thead-dark" style="background-color: sandybrown">
            <tr>
                <th scope="col">Mã Sản Phẫm</th>
                <th scope="col" style="padding-left: 30px;">Tên Sản Phẫm</th>
                <th scope="col">Mã Loại Sản Phẫm</th>
                <th scope="col">Mã Nhà Sản Xuất</th>
                <th scope="col">Hình Ảnh</th>
                <th scope="col">Tình Trạng</th>
                <th colspan="3" style="text-align: center">
                    Action
                    <a href="@Url.Action("Create","Product")">
                        <i style="margin-left:40px" class="fas fa-plus-circle"></i>
                    </a>
                </th>

            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.MaSanPham</td>
                <td>@item.TenSanPham</td>
                <td>@item.MaLoaiSanPham</td>
                <td>@item.MaNhaSanXuat</td>
                <td><img src="~/Assets/images/@item.HinhChinh" style="max-height:40px; max-width:40px" /></td>
                <td>@item.TinhTrang</td>
                <td>
                    <a href="@Url.Action("Edit","Product", new { id = item.MaSanPham})">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("Lock","Product", new { id = item.MaSanPham})">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

