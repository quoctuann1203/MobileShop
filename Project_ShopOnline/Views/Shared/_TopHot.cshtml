@model IEnumerable<ShopOnlineConnection.SanPham>
<div class="row">
    <div class="col-lg-12">
        <div class="heading"><h2>TOP HOT PRODUCTS</h2></div>
        <div class="products">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="product">
                        <div class="image"><a href="@Url.Action("Details","Shop",new { id = item.MaSanPham})"><img style="max-height: 210px; max-width: 210px" src="~/Assets/images/@item.HinhChinh"></a></div>
                        <div class="buttons">
                            <a class="btn cart" href="#"><span class="glyphicon glyphicon-shopping-cart"></span></a>
                            <a class="btn wishlist" href="#"><span class="glyphicon glyphicon-heart"></span></a>
                            <a class="btn compare" href="#"><span class="glyphicon glyphicon-transfer"></span></a>
                        </div>
                        <div class="caption">
                            <div class="name"><h3><a href="@Url.Action("Details","Shop",new { id = item.MaSanPham})">@item.TenSanPham</a></h3></div>
                            <div class="price">@item.Gia VND</div>
                            <div class="rating"><span style="color: #ebaa54" class="glyphicon glyphicon-star"></span><span style="color: #ebaa54" class="glyphicon glyphicon-star"></span><span style="color: #ebaa54" class="glyphicon glyphicon-star"></span><span style="color: #ebaa54" class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span></div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

