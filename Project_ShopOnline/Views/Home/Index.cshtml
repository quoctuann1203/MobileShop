@{
    ViewBag.Title = "Home Page";
}


<div id="page-content" class="home-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Carousel -->
                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators hidden-xs">
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                    </ol>
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="~/Assets/images/slide1 (1).png" alt="First slide">
                            <!-- Static Header -->
                            <div class="header-text hidden-xs">
                                <div class="col-md-12 text-center">
                                </div>
                            </div><!-- /header-text -->
                        </div>
                        <div class="item">
                            <img src="~/Assets/images/slide2 (1).png" alt="Second slide">
                            <!-- Static Header -->
                            <div class="header-text hidden-xs">
                                <div class="col-md-12 text-center">
                                </div>
                            </div><!-- /header-text -->
                        </div>
                        <div class="item">
                            <img src="~/Assets/images/slide3 (1).png" alt="Third slide">
                            <!-- Static Header -->
                            <div class="header-text hidden-xs">
                                <div class="col-md-12 text-center">
                                </div>
                            </div><!-- /header-text -->
                        </div>
                    </div>
                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                </div><!-- /carousel -->
            </div>
        </div>
        <div class="row">
            <div class="banner">
                <div class="col-sm-4">
                    <img src="~/Assets/images/sub-banner1.png" />
                </div>
                <div class="col-sm-4">
                    <img src="~/Assets/images/sub-banner2.png" />
                </div>
                <div class="col-sm-4">
                    <img src="~/Assets/images/sub-banner3.png" />
                </div>
            </div>
        </div>
        @Html.Partial("_BestSeller", Project_ShopOnline.Models.DB.ShopOnlineDB.BestSeller())
        <div class="row">
            <div class="banner">
                <div class="col-sm-6">
                    <img src="~/Assets/images/sub-banner4.jpg" />
                </div>
                <div class="col-sm-6">
                    <img src="~/Assets/images/sub-banner5.png" />
                </div>
            </div>
        </div>
        @Html.Partial("_TopHot", Project_ShopOnline.Models.DB.ShopOnlineDB.TopHot())
    </div>
</div>